<form>

  <div class="item-list-add">
    <div class="ondrop-box">{{localize "SimpleLootList.DropItem"}}</div>
  </div>

  <section class="currency-section">
    <header class="currency-header">
      {{localize "SimpleLootList.Currencies"}}
    </header>
    <ol class="currency-list">
      {{#each currencies as |currency|}}
      <li class="currency">
        <div class="currency-label">{{currency.label}}</div>
        <input type="text" data-key="{{currency.key}}" name="flags.simple-loot-list.currencies.{{currency.key}}" value="{{currency.value}}">
      </li>
      {{/each}}
    </ol>
  </section>

  <section class="item-section">

    <header class="item-header">
      <div class="header-quantity">{{localize "SimpleLootList.Quantity"}}</div>
      <div class="header-name">{{localize "SimpleLootList.Item"}}</div>
    </header>

    <ol class="item-list">
      {{#each lootItems as |item|}}
      <li class="item">
        <div class="item-quantity">
          <input type="text" value="{{item.quantity}}">
        </div>
        <div class="item-name" data-pack="{{item.pack}}" data-id="{{item.id}}" data-uuid="{{item.uuid}}">
          {{item.name}}
        </div>
        <a class="item-delete">
          <i class="fa-solid fa-trash"></i>
        </a>
      </li>
      {{/each}}
    </ol>

  </section>

  <div class="item-list-button-row flexrow">
    <button name="submit" type="submit">
      <i class="fa-solid fa-save"></i> {{localize "SimpleLootList.SaveList"}}
    </button>

    <button name="grant" type="button">
      <i class="fa-solid fa-bullseye"></i> {{localize "SimpleLootList.GrantToTarget"}}
    </button>

    <button name="clear" type="button">
      <i class="fa-solid fa-eraser"></i> {{localize "SimpleLootList.Clear"}}
    </button>
  </div>

</form>
